<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0">
  <info>
    <title>Universidad de León (España) - Harvard with ISBN-ISSN</title>
    <id>http://www.zotero.org/styles/universidad-de-leon-harvard-isbn-issn</id>
    <link href="http://www.zotero.org/styles/universidad-de-leon-harvard-isbn-issn" rel="self"/>
    <author>
      <name>Adaptado por ChatGPT para Marcelo Meireles Lobão</name>
    </author>
    <category citation-format="author-date"/>
    <updated>2025-06-23T00:00:00Z</updated>
    <summary>Estilo Harvard-ULE con ISBN y ISSN.</summary>
  </info>

  <macro name="author">
    <names variable="author">
      <name name-as-sort-order="all" sort-separator=", " delimiter=", "/>
      <label form="short" prefix=" "/>
      <substitute>
        <names variable="editor"/>
        <text variable="title"/>
      </substitute>
    </names>
  </macro>

  <macro name="year">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <citation>
    <layout prefix="(" suffix=")" delimiter="; ">
      <text macro="author"/>
      <text macro="year" prefix=" " />
    </layout>
  </citation>

  <bibliography>
    <layout hanging-indent="true" delimiter=". ">
      <text macro="author"/>
      <text macro="year" prefix=" (" suffix=")"/>
      <text variable="title" font-style="italic"/>
      <text variable="container-title"/>
      <group delimiter=", ">
        <text variable="publisher"/>
        <text variable="volume"/>
        <text variable="issue"/>
        <text variable="page"/>
      </group>
      <text variable="ISBN" prefix=". ISBN: "/>
      <text variable="ISSN" prefix=". ISSN: "/>
      <text variable="DOI" prefix=". doi: "/>
    </layout>
  </bibliography>
</style>
